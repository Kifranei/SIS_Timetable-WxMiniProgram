/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f7f9;
}
.login-form {
  width: 80%;
  padding: 20px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
}
.input-item {
  height: 45px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin-bottom: 15px;
  padding-left: 10px;
}
.login-btn {
  background-color: #007bff;
  color: white;
}
.error-message {
  color: red;
  text-align: center;
  margin-top: 10px;
}